<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hinhnen2"
    android:orientation="vertical"
    tools:context="com.example.quanlytaichinh.DangKyActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Đăng Ký Tài khoản "
        android:textColor="@color/mauchu"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivUser"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/user" />

                <TextView
                    android:id="@+id/tvTDN"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/ivUser"
                    android:gravity="center"
                    android:text="Tên đăng nhập :"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/ivmk"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/ivUser"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/key" />

                <TextView
                    android:id="@+id/tvmk"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/tvTDN"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/ivHoTen"
                    android:gravity="center"
                    android:text="Mật khẩu :"
                    android:textSize="18sp" />
                <ImageView
                    android:id="@+id/ivHoTen"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/ivmk"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/people" />

                <TextView
                    android:id="@+id/tvHoTen"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/tvmk"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/ivHoTen"
                    android:gravity="center"
                    android:text="Họ tên :"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/ivDiaChi"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/ivHoTen"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/trangthai" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/tvHoTen"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/ivDiaChi"
                    android:text="Địa chỉ :"
                    android:textSize="18sp" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edTenDangNhap"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="text" />

            <EditText
                android:id="@+id/edMatKhau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />


            <EditText
                android:id="@+id/edHoTen"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="text" />

            <EditText
                android:id="@+id/edDiaChi"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="text" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btDangKy"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/custombutton"
            android:gravity="center"
            android:text="Đăng ký" />

        <Button
            android:id="@+id/btHuy"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custombuttonred"
            android:gravity="center"
            android:text="Hủy"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>