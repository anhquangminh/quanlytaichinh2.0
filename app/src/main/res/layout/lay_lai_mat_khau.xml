<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Lấy lại mật khẩu"
        android:textColor="@color/mauchu"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivUser"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/user" />

                <TextView
                    android:id="@+id/tvTDN"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/ivUser"
                    android:gravity="center"
                    android:text="Tên đăng nhập :"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/ivHoTen"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/ivUser"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/people" />

                <TextView
                    android:id="@+id/tvHoTen"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/tvTDN"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/ivHoTen"
                    android:gravity="center"
                    android:text="Họ tên :"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/ivDiaChi"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/ivHoTen"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/trangthai" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/tvHoTen"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/ivDiaChi"
                    android:text="Địa chỉ :"
                    android:textSize="18sp" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edTenDangNhapl"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="text" />

            <EditText
                android:id="@+id/edHoTen"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="text" />

            <EditText
                android:id="@+id/edDiaChi"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="text" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btLayMK"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/custombutton"
            android:gravity="center"
            android:text="Lấy lại mật khẩu" />

        <Button
            android:id="@+id/btHuy"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custombuttonred"
            android:gravity="center"
            android:text="Hủy"
            android:textColor="#FAFAFA" />
    </LinearLayout>

</LinearLayout>